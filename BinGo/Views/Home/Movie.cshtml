            <div role="tabpanel" class="tab-pane container active" id="Action">
                <form style="margin-top: 20px;">
                    <label><input name="Sort" type="radio" ng-click="Resort('movie_date desc','Action')" value="movie_date desc" />按时间</label>
                    <label><input name="Sort" type="radio" ng-click="Resort('movie_rating desc','Action')" value="movie_rating desc" />按评分</label>
                    <label><input name="Sort" type="radio" ng-click="Resort('movie_numVotes desc','Action')" value="movie_numVotes desc" />按热度</label>
                </form>
                <div class="box container">
                    <div class="movie" ng-repeat="mov in ActionList" onFinishRenderFilters>
                        <ul class="list-unstyled">
                            <li>
                                <div class="movie-image">
                                    <a href="/Movie/MovieInfo/{{mov.movie_id}}"><span class="play"><span class="name">{{mov.movie_name}}</span></span><img src={{mov.pic_url}} alt="movie" /></a>
                                </div>
                            </li>
                            <li class="text-center">
                                <span class="name">{{mov.movie_name}}</span>
                                <div class="subject-rate">
                                    <jk-rating-stars max-rating="5" rating="mov.movie_rating/2" ng-model="mov.movie_rating" read-only="readOnly"></jk-rating-stars>
                                    <span>{{mov.movie_rating+'分'}}</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <nav>
                    <ul class="pagination pull-right">
                        <li>
                            <a ng-click="Previous(ActionCurPage,'Action')">
                                <span>上一页</span>
                            </a>
                        </li>
                        <li>
                            <a ng-click="Next(ActionCurPage,'Action')">
                                <span>下一页</span>
                            </a>
                        </li>
                    </ul>
                    <div style="text-align:center ">第<input type="number" min="1" max="{{ActionTotalPages}}" ng-model=ActionCurPage ng-change="Reload(ActionCurPage,'Action')" />页{{' 共'+ActionTotalPages+'页'}}</div>
