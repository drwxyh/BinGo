        <ul class="nav nav-tabs" role="tablist" id="nav-tabs">
            <li role="presentation" class="active"><a href="#Action" aria-controls="home" role="tab" data-toggle="tab">动作</a></li>
            <li role="presentation"><a href="#War" aria-controls="profile" role="tab" data-toggle="tab">战争</a></li>
            <li role="presentation"><a href="#History" aria-controls="messages" role="tab" data-toggle="tab">历史</a></li>
            <li role="presentation"><a href="#Comedy" aria-controls="settings" role="tab" data-toggle="tab">喜剧</a></li>
